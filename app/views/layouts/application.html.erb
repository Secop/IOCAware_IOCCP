<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>IOCAware Control Panel</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "bootstrap-responsive.min" %>
  <link href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/ui-lightness/jquery-ui.min.css" media="screen" rel="stylesheet" type="text/css" />
  <%= csrf_meta_tags %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>

  <%= javascript_include_tag 'bootstrap.min' %>
  <%= javascript_include_tag 'application' %>
</head>
<body>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <ul class="nav nav-pills">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/job/list">Jobs</a>
        </li>
        <li>
          <a href="/agent/list/all">Agents</a>
        </li>
        <li class="dropdown pull-right">
        <a href="#" data-toggle="dropdown" class="dropdown-toggle"><% current_user.inspect %><strong class="caret"></strong></a>
        <ul class="dropdown-menu">
            <li>
              <a href="/logout">Logout</a>
            </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
<% if flash[:alert] %>
    <div class="row-fluid">
        <div class="span12" id="alerts alert-block alert-error">
            <div class="alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <h4><%= flash[:alert] %></h4>
            </div>
        </div>
    </div>
    <% end %>
  <%= yield %>
</div>
  
</body>
</html>
